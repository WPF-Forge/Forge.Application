<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:routes="clr-namespace:Forge.Application.Demo.Routes"
    xmlns:views="clr-namespace:Forge.Application.Demo.Views">

    <DataTemplate DataType="{x:Type routes:HomeRoute}">
        <views:HomeView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type routes:AboutRoute}">
        <views:AboutView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type routes:ContactRoute}">
        <views:ContactView />
    </DataTemplate>

</ResourceDictionary>